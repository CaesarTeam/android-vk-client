<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/chat_margin_between"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/messageTextAvatarLand"
        layout="@layout/chat_avatar"/>

    <RelativeLayout
        android:id="@+id/messageTextContainerLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chat_from_avatar_margin_left_right"
        android:layout_marginRight="@dimen/chat_from_avatar_margin_left_right"
        android:padding="@dimen/chat_message_text_padding"
        android:layout_toEndOf="@id/messageTextAvatarLand"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/messageTextLand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/chat_message_max_width_land"
            android:layout_marginBottom="@dimen/chat_message_text_margin_bottom"/>

        <TextView
            android:id="@+id/messageTextTimeLand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageTextLand"
            android:layout_toEndOf="@id/messageTextLand"/>
    </RelativeLayout>

    <include
        android:id="@+id/messageTextReadStateLand"
        layout="@layout/chat_read_state"/>
</RelativeLayout>