<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_between_dialogs"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_for_dialog"
        android:layout_marginBottom="@dimen/margin_for_dialog">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dialogAvatar"
            android:layout_width="@dimen/image_size_for_avatar_in_dialogs"
            android:layout_height="@dimen/image_size_for_avatar_in_dialogs"
            android:layout_marginStart="@dimen/margin_left_for_avatar_in_dialog"
            app:riv_oval="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_size_for_avatar_in_dialogs"
            android:background="@drawable/dialogs_bottom_border"
            android:layout_toEndOf="@+id/dialogAvatar">

            <RelativeLayout
                android:id="@+id/titleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/margin_left_for_title_in_dialog"
                    android:layout_marginEnd="@dimen/margin_right_for_title_in_dialog"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/vk_black"
                    android:textSize="@dimen/font_size_title_dialog"/>

                <TextView
                    android:id="@+id/dialogTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_right_for_time_in_dialog"
                    android:singleLine="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/messageContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleContainer">

            <TextView
                android:id="@+id/dialogMessage"
                android:layout_width="@dimen/width_for_message_in_dialog"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_for_message_in_dialog"
                android:layout_marginStart="@dimen/margin_for_message_in_dialog"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/dialogUnreadCount"
                android:layout_width="@dimen/unread_count_circle_dialog"
                android:layout_height="@dimen/unread_count_circle_dialog"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/margin_right_for_unread_in_dialog"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="@color/vk_white"
                android:background="@drawable/blue_circle" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
